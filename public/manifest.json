{
    "manifest_version": 3,
    "name": "Proxy Server Extension",
    "version": "1.0.0",
    "description": "Chrome extension for network traffic monitoring, modification, and analysis",
    "icons": {
        "16": "icons/icon.svg",
        "48": "icons/icon.svg",
        "128": "icons/icon.svg"
    },
    "permissions": [
        "webRequest",
        "storage",
        "tabs",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_icon": {
            "16": "icons/icon.svg",
            "48": "icons/icon.svg",
            "128": "icons/icon.svg"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "declarative_net_request": {
        "rule_resources": []
    }
}